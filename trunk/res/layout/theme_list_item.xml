<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
        
	<ImageView android:id="@+id/theme_image"
		android:src="@drawable/menu_loading"
		android:layout_width="96dp"
		android:layout_height="60dp"
		android:padding="5dp"
		android:layout_alignParentLeft="true"
		android:focusable="false" />
	
	<TextView android:id="@+id/theme_price" android:textSize="16sp"
		android:textStyle="bold"
		android:minWidth="30dp" 
		android:padding="5dp"
		android:text="FFFFFFF"
		android:layout_alignParentRight="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
		
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_toRightOf="@id/theme_image"
		android:layout_toLeftOf="@id/theme_price"
		android:focusable="false" >

		<TextView android:id="@+id/theme_name" 
			android:textSize="18sp"
			android:textStyle="bold"
			android:layout_width="fill_parent"
            android:text="WWWWWWWWWWWWWWWWWWWWWWW"
			android:layout_height="wrap_content"/>

		<TextView android:id="@+id/theme_creator" 
			android:textSize="14sp"
			android:singleLine="true"
            android:ellipsize="marquee"
            android:textStyle="italic"
			android:layout_width="fill_parent" 
			android:text="MMMMMMMMMMMMMMMMMMMMMM"
			android:layout_height="wrap_content"/>

	</LinearLayout>

</RelativeLayout>