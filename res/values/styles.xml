<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="WidgetBackground">
        <item name="android:background">@drawable/widget_bg</item>
    </style>
 
    
    <style name="TimeText">
        <item name="android:textSize">58sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TimeText_Black">
        <item name="android:textSize">58sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TimeText_Landscape">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TimeText_Landscape_Black">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DateText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DateText_Black">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>