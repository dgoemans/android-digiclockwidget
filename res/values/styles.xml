<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="WidgetBackground">
        <item name="android:background">@drawable/widget_bg</item>
    </style>
    
    <style name="Text_MonoSpace">
    	<item name="android:text">@string/time_default_full</item>
        <item name="android:textSize">52dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lines">1</item>
    	<item name="android:typeface">monospace</item>
    </style>
    
     <style name="Text_Serif">
     	<item name="android:text">@string/time_default_full</item>
        <item name="android:textSize">52dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lines">1</item>
    	<item name="android:typeface">serif</item>
    </style>
    
    <style name="Text_Sans">
    	<item name="android:text">@string/time_default_full</item>
        <item name="android:textSize">52dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lines">1</item>
    	<item name="android:typeface">sans</item>
    </style>
    
    <style name="TimeText">
        <item name="android:textSize">58sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TimeText_Black">
        <item name="android:textSize">58sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TimeText_Landscape">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SingleTimeText">
    	<item name="android:text">@string/time_default_full</item>
        <!--  item name="android:textSize">52dp</item-->
        <item name="android:minWidth">140dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:textSize">52dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lines">1</item>
    </style>
    
    <style name="SingleDateText">
    	<item name="android:text">@string/date_default</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lines">1</item>
    </style>
    
    <style name="TimeText_Landscape_Black">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DateText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DateText_Black">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>